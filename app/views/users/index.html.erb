<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Our Users</h1>
  </div>

  <% @users.each do |user| %>
    <div class="users-list-item">
      <div class="user-image-div user-image-div-small">
        <%= link_to image_tag(user.avatar_url, class: 'user-image'), user_path(user) %>
      </div>
      <h2 class="users-list-item-text">
        <%= link_to "@#{user.username}", user_path(user) %>
      </h2>
    </div>
  <% end %>

  <div class="tag-block">
    <h2>Теги:</h2>
    <% @tags.each do |tag| %>
      <%= link_to "##{t.name}", tag_path(tag.name) %>
    <% end %>
  </div>
</div>